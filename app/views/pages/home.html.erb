<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <%= link_to "Create new offer", offers_new_path, class: "btn btn-lg btn-primary" %>
      <%= link_to "Show available offers",offers_show_all_path, class: "btn btn-lg btn-primary" %>
      <%= link_to "Nothing for now!", signup_path, class: "btn btn-lg btn-primary" %>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Sample App</h1>

    <h2>
      This is the home page for the
      <a href="https://www.railstutorial.org/">Ruby on Rails Tutorial</a>
      sample application.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<%end %>
