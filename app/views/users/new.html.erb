<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.label :full_name %>
      <%= f.text_field :full_name, class: 'form-control',placeholder: 'Name Surname' %>

      <%= f.label :date_of_birth %>
      <%= f.text_field :date_of_birth, class: 'form-control', placeholder: 'MM-DD-YYYY' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', placeholder: 'example@provider.com'%>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'password'%>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'repeat password' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>