<% provide(:title, @user.name) %>
<div class="row mt-4">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <br>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<div class="col-md-8">
  <% if @user.offers.any? %>
    <h3>Job offers (<%= @user.offers.count %>)</h3>
    <ol>
      <% @offers.each do |offer| %>
        <% if current_user?(@user) %>
          | <%= link_to "delete",offer, method: :delete,
                        data: { confirm: "You sure?" } %>
        <% end %>
      <% end %>
    </ol>
    <%= will_paginate @offers %>
  <% end %>
</div>