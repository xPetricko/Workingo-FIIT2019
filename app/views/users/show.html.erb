<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<div class="col-md-8">
  <% if @user.offers.any? %>
    <h3>Your job offers (<%= @user.offers.count %>)</h3>
    <ol class="microposts">
      <%= render @offers %>
    </ol>
    <%= will_paginate @offers %>
  <% end %>
</div>